<% @cart.orderables.each do |orderable| %>
  <% product = orderable.product %>
  <div class="cart-item" id="<%= "cart-#{product.id}" %>">

    <%= image_tag product.image, class:"cart-item__image" %>

    <div class="cart-item__details">
      <p class="cart-item__name">
        <%= link_to product.name, product_path(product), data: { turbo_frame: "_top" } %>
      </p>

      <p class="cart-item__price">
        <%= orderable.quantity %> x $<%= product.price %>
      </p>
    </div>

    <%= form_with(url: cart_remove_path) do |f| %>
      <%= f.hidden_field :id, value: orderable.id %>
      <%= f.submit "X", class:"cart-item__cancel_btn" %>
    <% end %>
  </div>
<% end %>



